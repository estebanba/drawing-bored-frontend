# ==================================================
# FRONTEND ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your actual values
# Note: Vite only exposes variables prefixed with VITE_

# ==================================================
# API SETTINGS
# ==================================================
# Backend API URL
VITE_API_URL_DEV=http://localhost:3000
VITE_API_URL_PROD=https://api.your-app.com

# ==================================================
# APPLICATION SETTINGS
# ==================================================
# Application name and branding
VITE_APP_NAME=Your App Name
VITE_APP_DESCRIPTION=A clean, minimal boilerplate for modern web applications

# ==================================================
# THIRD-PARTY SERVICES
# ==================================================
# Stripe Publishable Key (COMMENTED OUT - uncomment when Stripe is needed)
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# ==================================================
# DEVELOPMENT SETTINGS
# ==================================================
# For local development
VITE_DEV_MODE=false

# Features (Optional - for enabling/disabling features)
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Analytics (Optional - for user tracking)
# VITE_GA_TRACKING_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://your-sentry-dsn

# Environment Detection
VITE_NODE_ENV=development 